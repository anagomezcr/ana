function postfix_inc(value)
{
  return value++;
}

function postfix_obj(obj)
{
  return obj.value++;
}

print(postfix_inc(5));
print(postfix_obj({ 'value' : 0}));

function postfix_dec(value)
{
  while(value--)
  {
    print(value);
  }

  print("at end of loop, value is :");
  print(value);
}

postfix_dec(5);

